<head>
    <title>Product</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>

    <div class="float-none">
        <div class="btn-group float-start d-none" id="admin-content">
            <button type="button" class="btn btn-secondary"
                onclick="window.location.href='/signIn/AllUsers'">User</button>
            <button type="button" class="btn btn-primary"
                onclick="window.location.href='/signIn/AllProducts'">Product</button>
        </div>

        <h5 class="float-end" style="margin: 10px ;">HELLO {{acc.fullname}}</h5>
        <img src="https://upload.wikimedia.org/wikipedia/commons/b/bc/Refresh_icon.png" class="rounded"
            style="max-width: 2%" ; onclick="hideShow('{{acc.role}}')" id="refersh-icon" />

        <div class="dropdown float-end">
            <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton1"
                data-bs-toggle="dropdown" aria-expanded="false">
                More
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                <li><a class="dropdown-item" onclick="window.location.href='/editU/{{acc._id}}'">Edit Profile</a></li>
                <li><a class="dropdown-item" onclick="window.location.href='/'">Sign Out</a></li>
            </ul>
        </div>
    </div>

    <div>
        <div class="d-flex justify-content-center">
            <button type="button" class="btn btn-success" id="addProduct" data-bs-toggle="modal"
        data-bs-target="#productModal">Add</button>
        </div>
        <table class="table table-hover" id="productTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Color</th>
                    <th>Type</th>
                    <th>User Id</th>
                    <th>User Name</th>
                </tr>
            </thead>
            <tbody>
                {{#each productData}}
                <tr>
                    <td>{{this._id}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.color}}</td>
                    <td>{{this.type}}</td>
                    <td>{{this.userId}}</td>
                    <td>{{this.userName}}</td>
                    <td><button type="button" class="btn btn-warning"
                            onclick="window.location.href='/editP/{{this._id}}'">Edit</button>
                        <button type="button" class="btn btn-danger"
                            onclick="deleteProduct('{{this._id}}')">Delete</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="productModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-body">
                    <label>Add Product</label>
                    <form action="/addProduct" method="post">
                        <div class="mb-3 mt-3">
                            <label for="productNameAdd">Name:</label>
                            <input type="text" class="form-control" id="productNameAdd" name="productNameAdd"
                                placeholder="productName">
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="priceAdd">Price:</label>
                            <input type="number" class="form-control" id="priceAdd" name="priceAdd" placeholder="price">
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="colorAdd">Color:</label>
                            <input type="text" class="form-control" id="colorAdd" name="colorAdd" placeholder="color">
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="typeAdd">Type:</label>
                            <input type="text" class="form-control" id="typeAdd" name="typeAdd" placeholder="type">
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="userIdAdd">User Id:</label>
                            <input type="text" class="form-control" id="userIdAdd" name="userIdAdd"
                                placeholder="userId" value="{{acc._id}}" readonly>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="userNAdd">User Name:</label>
                            <input type="text" class="form-control" id="userNAdd" name="userNAdd"
                                placeholder="userName" value="{{acc.fullname}}" readonly>
                        </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success" data-bs-dismiss="modal" id="saveAdd">Save</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>

        function hideShow(role) {
            if (role == "admin") {
                console.log("ad");
                const adminContent = document.getElementById("admin-content");
                adminContent.classList.remove("d-none");
                document.getElementById("refersh-icon").remove();
            } else {
                console.log("ko");
                document.getElementById("refersh-icon").remove();
            }
        }

        function deleteProduct(id) {
            let text = "Xóa?";
            if (confirm(text) == true) {
                fetch(`/deleteP/${id}`, { method: 'DELETE' })
                    .then(response => {
                        location.reload();
                        alert("Đã xóa!");
                    })
                    .catch(error => console.error(error));
            } else {
                alert("Không xóa!");
            }
        }

    </script>
</body>