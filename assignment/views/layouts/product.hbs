<head>
    <title>Product</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>

    <div class="float-none">
        <div class="btn-group float-start " id="admin-content">
            <button type="button" class="btn btn-secondary"
                onclick="window.location.href='/signIn/AllUsers'">User</button>
            <button type="button" class="btn btn-primary" onclick="window.location.href='/signIn/AllProducts'">Product</button>
        </div>

        <div class="btn-group float-end">
            <button type="button" class="btn btn-success" onclick="">Edit Profile</button>
        </div>
    </div>

    <div>
        <div class="d-flex justify-content-center">
            <button type="button" class="btn btn-success" id="addProduct">Add</button>
        </div>
        <table class="table table-hover" id="productTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Color</th>
                    <th>Type</th>
                    <th>User Id</th>
                    <th>User Name</th>
                </tr>
            </thead>
            <tbody>
                {{#each productData}}
                <tr>
                    <td>{{this._id}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.color}}</td>
                    <td>{{this.type}}</td>
                    <td>{{this.userId}}</td>
                    <td>{{this.userName}}</td>
                    <td><button type="button" class="btn btn-warning"
                            onclick="window.location.href='/editP/{{this._id}}'">Edit</button>
                        <button type="button" class="btn btn-danger"
                            onclick="deleteProduct('{{this._id}}')">Delete</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="productModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-body">
                    <label>Add Product</label>
                    <form action="/addUser" method="post">
                        <div class="mb-3 mt-3">
                            <label for="productNameAdd">Name:</label>
                            <input type="text" class="form-control" id="productNameAdd" name="productNameAdd"
                                placeholder="productName">
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="priceAdd">Email:</label>
                            <input type="number" class="form-control" id="priceAdd" name="priceAdd" placeholder="price">
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="colorAdd">Email:</label>
                            <input type="text" class="form-control" id="colorAdd" name="colorAdd" placeholder="color">
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="typeAdd">Email:</label>
                            <input type="text" class="form-control" id="typeAdd" name="typeAdd" placeholder="type">
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="userIdAdd">Email:</label>
                            <input type="text" class="form-control" id="userIdAdd" name="userIdAdd"
                                placeholder="userId">
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="userNAdd">Email:</label>
                            <input type="text" class="form-control" id="userNAdd" name="userNAdd"
                                placeholder="userName">
                        </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success" data-bs-dismiss="modal" id="saveAdd">Save</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        function deleteProduct(id) {
            let text = "Xóa?";
            if (confirm(text) == true) {
                fetch(`/deleteP/${id}`, { method: 'DELETE' })
                    .then(response => {
                        location.reload();
                        alert("Đã xóa!");
                    })
                    .catch(error => console.error(error));
            } else {
                alert("Không xóa!");
            }
        }

    </script>
</body>