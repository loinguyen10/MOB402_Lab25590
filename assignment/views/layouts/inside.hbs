<!DOCTYPE html>
<html lang="en">

<head>
  <title>Welcome</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="js.js"></script>
</head>

<body>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" id="navId">
    <li class="nav-item">
      <a href="#tabUsers" class="nav-link active" data-bs-toggle="tab" aria-current="page">Users</a>
    </li>

    <li class="nav-item">
      <a href="#tabProducts" class="nav-link" data-bs-toggle="tab">Products</a>
    </li>

  </ul>

  <!-- Tab panes -->
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="tabUsers">
      <div class="d-flex justify-content-center">
        <button type="button" class="btn btn-success" id="addUser" data-bs-toggle="modal"
          data-bs-target="#userModal">Add</button>
      </div>
      <table class="table table-hover" id="userTable">
        <thead>
          <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Phone</th>
          </tr>
        </thead>
        <tbody>
          {{#each userData}}
          <tr>
            <td name="idEdit">{{this.id}}</td>
            <td name="userNameEdit">{{this.username}}</td>
            <td name="emailEdit">{{this.email}}</td>
            <td name="phoneEdit">{{this.phone}}</td>
            <td>
              <button type="button" class="btn btn-warning" id="editProduct" data-bs-toggle="modal"
          data-bs-target="#userEModal" onclick="editU({{this.id}})">Edit</button>
              <button type="button" class="btn btn-danger" id="deleteProduct" onclick="deleteItem({{this.id}})">Delete</button>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <div class="tab-pane fade" id="tabProducts">
      <div class="d-flex justify-content-center">
        <button type="button" class="btn btn-success" id="addProduct">Add</button>
      </div>
      <table class="table table-hover" id="productTable">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Color</th>
            <th>Type</th>
            <th>User Id</th>
            <th>User Name</th>
          </tr>
        </thead>
        <tbody>
          {{#each productData}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.price}}</td>
            <td>{{this.color}}</td>
            <td>{{this.type}}</td>
            <td>{{this.userId}}</td>
            <td>{{this.userName}}</td>
            <td><button type="button" class="btn btn-warning" id="editProduct">Edit</button></td>
            <td><button type="button" class="btn btn-danger" id="deleteProduct">Delete</button></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <!-- The Modal -->
  <div class="modal fade" id="userModal">
    <div class="modal-dialog">
      <div class="modal-content">

        <div class="modal-body">
          <label>Add User</label>
          <form action="/addUser" method="post">
            <div class="mb-3 mt-3">
              <label for="userNameAdd">Name:</label>
              <input type="text" class="form-control" id="userNameAdd" name="userNameAdd" placeholder="userName">
            </div>
            <div class="mb-3 mt-3">
              <label for="emailAdd">Email:</label>
              <input type="email" class="form-control" id="emailAdd" name="emailAdd" placeholder="email">
            </div>
            <div class="mb-3 mt-3">
              <label for="phoneAdd">Phone:</label>
              <input type="phone" class="form-control" id="phoneAdd" name="phoneAdd" placeholder="phone">
            </div>
        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-success" data-bs-dismiss="modal" id="saveAdd">Save</button>
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- The Modal -->

  <script>

function editU(id){
  location.href = `/editU/${id}`;
  console.log(id)
}

function deleteItem(id) {
    fetch(`/inside/${id}`, { method: 'DELETE' })
      .then(response => {
        if (response.ok) {
          location.reload();
        } else {
          alert('Xóa thất bại')
        }
      })
      .catch(error => console.error(error));
  }

  </script>

  <!-- The Modal -->
  <div class="modal fade" id="userEModal">
    <div class="modal-dialog">
      <div class="modal-content">

        <div class="modal-body">
          <label>Edit User</label>
            {{>editUser}}
        </div>
      </div>
    </div>
  </div>
  <!-- The Modal -->

</body>

</html>