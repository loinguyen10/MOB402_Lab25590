<head>
  <title>User</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>

  <div class="float-none">
    <div class="btn-group float-start" id="admin-content">
      <button type="button" class="btn btn-primary" onclick="window.location.href='/signIn/AllUsers'">User</button>
      <button type="button" class="btn btn-secondary"
        onclick="window.location.href='/signIn/AllProducts'">Product</button>
    </div>

    <div class="dropdown float-end">
      <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
        aria-expanded="false">
        More
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><a class="dropdown-item" onclick="window.location.href='/editU/{{acc._id}}'">Edit Profile</a></li>
        <li><a class="dropdown-item" onclick="window.location.href='/'">Sign Out</a></li>
      </ul>
    </div>
  </div>

  <div>
    <div class="d-flex justify-content-center">
      <button type="button" class="btn btn-success" id="addUser" data-bs-toggle="modal"
        data-bs-target="#userModal">Add</button>
    </div>
    <table class="table table-hover" id="userTable">
      <thead>
        <tr>
          <th>Id</th>
          <th>Fullname</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Password</th>
          <th>Role</th>
        </tr>
      </thead>
      <tbody>
        {{#each userData}}
        <tr>
          <td>{{this._id}}</td>
          <td>{{this.fullname}}</td>
          <td>{{this.email}}</td>
          <td>{{this.phone}}</td>
          <td>{{this.password}}</td>
          <td>{{this.role}}</td>
          <td>
            <button type="button" class="btn btn-warning"
              onclick="window.location.href='/editU/{{this._id}}'">Edit</button>
            <button type="button" class="btn btn-danger" onclick="deleteUser('{{this._id}}')">Delete</button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- The Modal -->
  <div class="modal fade" id="userModal">
    <div class="modal-dialog">
      <div class="modal-content">

        <div class="modal-body">
          <label>Add User</label>
          <form action="/addUser" method="post" enctype="multipart/form-data">
            <div class="mb-3 mt-3">
              <label for="fullnameAdd">Fullname:</label>
              <input type="text" class="form-control" id="fullnameAdd" name="fullnameAdd" placeholder="Fullname">
            </div>
            <div class="mb-3 mt-3">
              <label for="emailAdd">Email:</label>
              <input type="email" class="form-control" id="emailAdd" name="emailAdd" placeholder="email">
            </div>
            <div class="mb-3 mt-3">
              <label for="phoneAdd">Phone:</label>
              <input type="number" class="form-control" id="phoneAdd" name="phoneAdd" placeholder="phone">
            </div>
            <div class="mb-3">
              <label for="avatar">Avatar:</label>
              <input type="file" name="avatar" id="avatar" accept="image/*" />
            </div>
            <div class="mb-3 mt-3">
              <label for="passwordAdd">Password:</label>
              <input type="text" class="form-control" id="passwordAdd" name="passwordAdd" placeholder="password">
            </div>
            <div class="mb-3 mt-3">
              <label for="roleAdd">Role:</label>
              <input type="text" class="form-control" id="roleAdd" name="roleAdd" placeholder="role">
            </div>
        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-success" data-bs-dismiss="modal" id="saveAdd" value="upload">Save</button>
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- The Modal -->

  <script>


    function deleteUser(id) {
      let text = "Xóa?";
      if (confirm(text) == true) {
        fetch(`/deleteU/${id}`, { method: 'DELETE' })
          .then(response => {
            location.reload();
            alert("Đã xóa!");
          })
          .catch(error => console.error(error));
      } else {
        alert("Không xóa!");
      }
    }

  </script>

</body>